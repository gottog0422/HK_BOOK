<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="69dp">
    <ImageView
        android:id="@+id/iv_income_expense"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_income_oval"
        android:layout_marginLeft="12dp"
        />
    <LinearLayout
        android:layout_toRightOf="@+id/iv_income_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12.2dp"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/txt_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#232323"
            android:text="10000"
            />
        <TextView
            android:id="@+id/txt_income_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#00a99a"
            android:text="@string/income"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_del"
        android:layout_width="36.3dp"
        android:layout_height="36.3dp"
        android:background="@drawable/ic_edit_delete_keycolor"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16.8dp"
        />
</RelativeLayout>