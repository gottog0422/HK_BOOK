<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.5dp"
        >
        <TextView
            android:id="@+id/txt_input_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14.5dp"
            android:textColor="#4b4242"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_round_black_close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14.3dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        >
        <ImageView
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:background="@drawable/img_won"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/et_cost"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="72dp"
            android:inputType="number"
            android:textColor="#587bab"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19.3dp"
            android:gravity="right"
            android:background="@null"
            android:text="0"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20.3dp"
        >
        <Button
            android:id="@+id/btn_deposit"
            android:layout_width="150dp"
            android:layout_height="67.5dp"
            android:background="@drawable/selector_input_btn_deposit"
            android:text="@string/deposit"
            android:textSize="20dp"
            android:textColor="@drawable/selector_input_btn_text_deposit"
            />
        <Button
            android:id="@+id/btn_withdraw"
            android:layout_width="150dp"
            android:layout_height="67.5dp"
            android:background="@drawable/selector_input_btn_withdraw"
            android:text="@string/withdraw"
            android:textSize="20dp"
            android:textColor="@drawable/selector_input_btn_text_deposit"
            android:layout_marginLeft="20.3dp"
            />
    </LinearLayout>
</LinearLayout>